<div class="h-screen w-full bg-white">
    <div
        class="top-bar h-16 w-full bg-apexBlue flex justify-start items-center p-4"
    >
        <img
            src="./assets/Apex_logo_horizontal_white.png"
            alt="Logo"
            class="h-8 mr-4"
        />
        <h1 class="font-bold text-lg text-white">Champions' Friday</h1>
    </div>

    <div class="grid grid-cols-12 gap-0 h-[calc(100%-4rem)]">
        <aside
            class="shadow-sm bg-logoGrey rounded-r-lg col-span-3 md:col-span-2 lg:col-span-2 xl:col-span-2 p-4 h-full"
        >
            <nav>
                <ul>
                    <li class="flex items-center">
                        <svg
                            class="w-6 h-6 mr-2 text-white"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 4a1 1 0 011-1h3.279a1 1 0 01.7.292l1.296 1.296A1 1 0 0010.721 5H21a1 1 0 011 1v13a1 1 0 01-1 1H3a1 1 0 01-1-1V4z"
                            />
                        </svg>
                        <a
                            href="#"
                            class="text-white hover:text-yellow"
                            hx-get="/home"
                            >Home</a
                        >
                    </li>
                    <li class="flex items-center mt-4">
                        <svg
                            class="w-6 h-6 mr-2 text-white"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M12 20h.01M17.5 20h.01M7 20h.01"
                            />
                        </svg>
                        <a
                            href="#"
                            class="text-white hover:text-yellow"
                            hx-get="/features"
                            >Features</a
                        >
                    </li>
                    <li class="flex items-center mt-4">
                        <svg
                            class="w-6 h-6 mr-2 text-white"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M11 17a4 4 0 104-4h-3m3 0h-4"
                            />
                        </svg>
                        <a
                            href="#"
                            class="text-white hover:text-yellow"
                            hx-get="/badgeshal"
                            >Badges Hall</a
                        >
                    </li>
                </ul>
            </nav>
        </aside>

        <main
            class="col-span-9 md:col-span-10 lg:col-span-10 xl:col-span-10 p-4 h-full bg-teal3"
        >
            <div
                class="leaderboard"
                hx-get="/leaderboard"
                hx-trigger="load"
                hx-target="#leaderboard-table"
                hx-swap="outerHTML"
            >
                <h2 class="font-bold text-lg text-apexBlue">
                    Champions Leaderboard
                </h2>
                <table id="leaderboard-table" class="min-w-full bg-white">
                    <thead class="bg-logoGrey text-white">
                        <tr>
                            <th class="w-1/6 py-2">Name</th>
                            <th class="w-1/6 py-2">Seniority</th>
                            <th class="w-1/6 py-2">Practice</th>
                            <th class="w-1/6 py-2">Total Badges</th>
                            <th class="w-1/6 py-2">Quarter Badges</th>
                            <th class="w-1/6 py-2">Current Quarter Badges</th>
                        </tr>
                    </thead>
                    <tbody id="leaderboard-body">
                        <tr>
                            <td><div>Loading data...</div></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
